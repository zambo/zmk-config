ZMK_LEADER_SEQUENCE(alt_e,  &kp LA(E),  E)    
ZMK_LEADER_SEQUENCE(alt_i,  &kp LA(I),  I)    
ZMK_LEADER_SEQUENCE(alt_o,  &kp LA(O),  O)

